using System;
   class Program { 
 public static void Main (string[] args) { 
 int summ = 0;
   int a = -1;
   do {
     a += 2;
     summ += a;
   } while (a < 49);
   Console.WriteLine(summ);
  }
}

using System;
   class Program { 
 public static void Main (string[] args) { 
  int sama = 0;
   for (int n = -1; n < 51; n += 2) {
     sama += n;
   }
     Console.WriteLine(sama);
  }
}

using System;
   class Program { 
 public static void Main (string[] args) { 
  int summ = 0;
   int a = -1;
   while (a < 49) {
     a += 2;
     summ += a;
   }
   Console.WriteLine(summ);
  }
}


