using System;
class Program {
  public static void Main (string[] args) {
  int i = 1;
    do
    {
      Console.WriteLine(i);
      i *= 2;
    } while (i <= 1024);
  }
}


9. 

using System; 
   class Program { 
 public static void Main (string[] args) { 
 int n=5; 
  for(int i=1;i<=n;i++) 
   { 
    for(int j=1;j<=i;j++) 
     { 
     Console.Write(j); 
     } 
    Console.WriteLine(); 
   } 
  } 
 } 


10.

using System;
class Program {
  public static void Main (string[] args) {
  int i = 3;
    int sum = 0;
    while (i <= 99)
    {
      sum += i;
      i += 2;
    }
    Console.WriteLine("Sum is " + sum);
  }
}


11. 

using System;
class Program {
public static void Main (string[] args) {
for (int i = 5; i >= 1; i--)
{
for (int j = i; j >= 1; j--)
{
Console.Write("*");
}
Console.WriteLine();
}
}
}


12. 

using System;
  class Program {
public static void Main (string[] args) {
    Console.Write("x: ");
  int x = Convert.ToInt32(Console.ReadLine());
    Console.Write("n: ");
  int n = Convert.ToInt32(Console.ReadLine());
  int m = 1;
  double sum = 0;
  while (m <= n) {
     sum += (m/Math.Pow(x, m+1));
      m++;
  }
  Console.WriteLine(sum);
 }
}
